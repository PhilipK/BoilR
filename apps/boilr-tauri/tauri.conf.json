{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/schema.json",
  "productName": "BoilR",
  "version": "0.1.0",
  "identifier": "io.github.philipk.boilr",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "BoilR Tauri",
        "width": 1280,
        "height": 720,
        "url": "index.html",
        "resizable": true
      }
    ]
  }
}
